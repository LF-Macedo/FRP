public OnPlayerDisconnect(playerid, reason)
{
	new Motivo[20];
	if(reason == 0) Motivo = "Queda de conexao";
	if(reason == 1) Motivo = "Conta propria";
	if(reason == 2) Motivo = "Kickado/Banido";
    SendClientMessageToAll(playerid, -1, "{289E08}O Jogador {39F505}%s{289E08} Desconectou do servidor. (%s)", Nome(playerid), Motivo);
	return 1;
}

